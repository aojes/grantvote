.prepend-1.prepend-top
  %h2= "Grantvote Leaders"
.span-20.prepend-1.append-2.last
  - @leaders.each_with_index do |leader, id|
    .span-2<
      = link_to user_defined_image(leader.user, :medium, :alt => h(leader.user.login)), profile_path(h leader.user.login)
    .span-15.append-3.last
      .span-5<
        %h3{:style => "padding-left: 1em"}= link_to h(leader.user.login), profile_path(h(leader.user.login))
      .span-10.last
        .span-10= user_cred_images leader.user, :thumb
        .span-10.last
          - leader.user.groups.slice(0..10).each do |group|
            = link_to user_defined_image(group, :thumb, :alt => h(group.name), :title => h(group.name)), group_path(group.permalink)
    %hr
  %h4= will_paginate @leaders

