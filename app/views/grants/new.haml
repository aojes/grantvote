%h2.prepend-1 New Grant
%p
  - form_for @grant, :html => {:multipart => true} do |f|
    = f.error_messages
    .form_row
      = f.label :name
      = f.text_field :name
    .form_row
      = f.label "Request Amount"
      = f.text_field :amount
    .form_row
      = f.label :proposal
      = f.text_area :proposal
    .form_row
      = f.label "Photo"
      = f.file_field :photo
      = f.hidden_field :user_id, :value => current_user.id
      = f.hidden_field :group_id, :value => params[:group_id]
    .prepend-4= submit_button "Create"
    
