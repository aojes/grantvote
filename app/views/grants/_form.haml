.span-21.prepend-2.append-1.last
  = form.error_messages    
  - unless @grant.name.blank?
    %h2.append-2 Edit Grant
  - else
    %h2.append-2 New Grant
  .span-11
    = @grant.media if @grant.media
    = form.text_area :proposal
  .span-10.last
    = form.text_field :name
    &nbsp; name
    %br
    %br
    = form.text_field :amount, :size => 4
    &nbsp; amount
    %br
    %br
    - if @grant
      = image_tag @grant.photo.url(:large), :alt => h(@grant.name)
      %br
      %br
    = form.file_field :photo
    &nbsp; photo
    %br
    %br
    .small.quiet
      = form.text_field :media
      &nbsp; YouTube or Viddler


