.form_row
  = form.label :login
  = form.text_field :login, :onclick => "$('#confirm_vital').show(); return false;"
.form_row
  = form.label :email 
  = form.text_field :email, :onclick => "$('#confirm_vital').show(); return false;"

- if controller.controller_name == "users" and controller.action_name == "edit"
  #confirm_vital.notice.rounded
    .quiet To change your login or email address, you must re-enter your password:
    = form.password_field :password_confirm_vital
  #change_password_link
    %h5= link_to_function "change password", "$('#change_password_link').hide(); $('#change_password').show(); return false;"
  #change_password
    .form_row
      = form.label :password, "Current password"
      = form.password_field :password
    .form_row
      = form.label :new_password, "New password"
      = form.password_field :new_password
    .form_row
      = form.label :confirm_new_password, "Confirm password"
      = form.password_field :confirm_new_password
      
- if @user == current_user  
  - form.fields_for :profile do |p|
    .form_row
      = p.label :name, "Full name"
      = p.text_field :name
    .form_row
      = p.label :location
      = p.text_field :location
    .form_row
      = p.label :link
      = p.text_field :link
    .form_row
      = p.label :detail, "About you"
      = p.text_field :detail    
    .form_row
      = form.label :photo, @user.photo.file? ? "Change photo" : "Add photo"
      = form.file_field :photo 

