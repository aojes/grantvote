.prepend-top
%div.rounded-box.rounded-box-medium.centered
  %div
    %div
      %div.rounded-box-largefont
        %h2.prepend-1.prepend-top Sign in
        .clear.large
          - form_for @user_session, :url => user_session_path do |f|
            %p
              = f.error_messages 
            %p
              = f.label :login, "Username"
              = f.text_field :login
            %p
              = f.label :password
              = f.password_field :password
            %p
              = f.check_box :remember_me
            %strong Remember me
            %p
              = submit_button "Log In"
            .form-space
            %p
              = link_to "Forgot your password?", new_password_reset_path, :class => "small quiet"
            %br 
            %br
         
