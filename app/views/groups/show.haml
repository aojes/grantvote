= render 'header', :group => @group
.span-24.last
  .span-14.prepend-1.append-1.last
    %h2 Recent Awards
    .prepend-1
      -# TODO make partial
      - for grant in grants_awarded
        %h3== <span style="float:right">#{image_tag grant.user.photo.url(:small)}</span> #{h grant.name}
        %h5== $#{grant.amount.to_i}
        .span-3.last
          .span-3= image_tag(grant.photo.url(:medium), :alt => "HELPER METHOD")
          .span-2.success.prepend-top.last nifty chart
        .span-10.last= simple_format grant.proposal, :style => "text-align: justify; line-height: 2" 
        %hr
    #comments
      %h6 {count} Comments
      %hr
      - for comment in @group.comments
        = simple_format comment.content
        %hr
    %h5= link_to "Add Comment", new_group_comment_path(@group)
    -# %h5= link_to 'Edit', edit_group_path(@group)
    -# %h5= link_to 'Back', groups_path
  .span-6
    .success
      %h3== Dues $#{@group.dues} 
      %h3== Funds $#{@group.funds.floor.to_i} 
      %h3= link_to "Join Group", new_group_membership_path(@group) if not member?(params[:id])
      %h3= link_to "Write Grant", new_group_grant_path(@group) if member?(params[:id])
      %h3= link_to "View Forum", group_grants_path(@group) if member?(params[:id])
    .success.prepend-top.last
      -# %h3= pluralize @group.memberships.count, "Member"
      %h3= pluralize principals(params[:id]).count, "Voter"
      - for member in @group.users
        = image_tag member.photo.url(:thumb)
    .success.prepend-top.last
      nifty charts
        
