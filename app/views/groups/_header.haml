.span-24
  .prepend-top
    .span-8.prepend-1{:style => "min-height: 160px"}
      - if controller.controller_name == "groups"
        %h2= link_to user_defined_image(group, :display, :alt => "to group voting page", :title => "View Session"), group_grants_path(group)
      - else
        %h2= link_to user_defined_image(group, :display, :alt => "to group home page"), group_path(group)
    .span-14.append-1.last
      %h2{:style => "padding-right: 40px"}=h group.name
      %h3{:style => "padding-right: 40px"}=h group.purpose
      .flr.prepend-top
        %h3.pull-6== Pool #{number_to_currency(group.funds.floor, :precision => 0)}
%br{:style => "clear: both"}      
