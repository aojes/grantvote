.span-24.last
  .span-14.prepend-1.append-1.last
    - if @group.memberships.voters.count.zero?
      %h3
        .flr= button_to 'Edit Group', edit_group_path(@group), :method => :get, :onclick => "this.blur();"
        Anyone can edit this group until dues are paid
      %br
      %br
    - else
      %h2 Recent Awards
    .prepend-1
      - for grant in grants_awarded
        %h3<
          .flr= image_tag grant.user.photo.url(:small)
          =h grant.name
        %h5== $#{grant.amount.to_i}
        .span-3.last
          .span-3= image_tag(grant.photo.url(:medium), :alt => grant.name)
          .span-3.prepend-top.last
            .small<
              &nbsp;
              = session_award_time grant
        .span-10.last= simple_format grant.proposal, :style => "text-align: justify; line-height: 2" 
        %hr
    #comments
      %h6= pluralize @group.comments.count, "Comment"
      %hr
      = render 'shared/comments', :comments => @group.comments
    %h5= link_to "Add Comment", new_group_comment_path(@group)
  .span-6
    .success
      -# FIXME use partial
      %h3== Dues $#{@group.dues} 
      %h3== Funds $#{@group.funds.floor.to_i} 
      %h3= link_to "Join Group", new_group_membership_path(@group) if not member?(params[:id])
      %h3= link_to "Write Grant", new_group_grant_path(@group) if voter?(params[:id])
      %h3= "Pay Dues" unless voter?(params[:id])
      %h3= link_to "Session", group_grants_path(@group) unless @group.grants.count.zero?
    .success.prepend-top.last
      - if @group.memberships.voters.count.zero?
        %h3= pluralize @group.memberships.members.count, "Member"
        - group_members(params[:id]).each do |m|
          = image_tag m.photo.url(:thumb)
      - else
        %h3= pluralize @group.memberships.voters.count, "Voter"
        - group_voters(params[:id]).each do |v|
          = image_tag v.photo.url(:thumb)
    .success.prepend-top.last
      nifty charts       
