- form_for @group, :html => { :multipart => true } do |f|
  .span-24
    .prepend-top
      .span-8.prepend-1
        - if @group.photo.file?
          %h2= link_to user_defined_image(@group, :display, :alt => h(@group.name)), group_grants_path(@group)
        - else
          %h2= link_to user_defined_image(@group, :display, :alt => h(@group.name)), group_grants_path(@group)
      .span-14.append-1.last
        .form_row
          = f.text_field :name
          name
        .form_row
          = f.text_field :purpose, :size => 60
          purpose
        .form_row
          = f.file_field :photo
          change photo
        .form_row.prepend-top.prepend-1
          = submit_button "Update"
        = f.error_messages
  %br{:style => "clear: both"}
