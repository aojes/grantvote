- form_for @group, :html => { :multipart => true } do |f|
  .span-24
    .prepend-top
      .span-8.prepend-1
        %h2= link_to image_tag(@group.photo.url(:display), :alt => h(@group.name)), group_grants_path(@group), :alt => h(@group.name)
      .span-14.append-1.last
        .form_row
          = f.text_field :name
          name
        .form_row
          = f.text_field :purpose, :size => 60
          purpose
        .form_row
          = f.file_field :photo
          change photo
        .form_row.prepend-top.prepend-1
          = submit_button "Update"
  %br{:style => "clear: both"}
