!!!
%html{ html_attrs }
  %head
    %title= controller.controller_name + ": " + controller.action_name 
    %meta{ "http-equiv" => "content-type", :content => "text/xhtml; charset=utf-8" }
    %meta{ :name => 'description', :content => "A place for giving and winning financial grants from people with similar interests." }
    %meta{ :name => 'keywords', :content => "grants, grant, money, funding, writing, financial, resource, network, community, philanthropy, giving" }
    %meta{ "http-equiv" => "imagetoolbar", :content => "no" }
    %meta{ :name => "distribution", :content => "all" }
    %meta{ :name => "robots", :content => "all" }
    %meta{ :name => "resource-type", :content => "document" }
    %meta{ :name => "MSSmartTagsPreventParsing", :content => "true" }
    = stylesheet_link_tag 'blueprint/screen', {:media => "screen, projection"}
    = stylesheet_link_tag 'blueprint/print', {:media => "print"}
    <!-- [if IE]><link rel="stylesheet" href="/stylesheets/blueprint/ie.css" type="text/css" media="screen, projection"><![endif]-->
    = stylesheet_link_tag 'base'
    = javascript_include_tag :defaults
  %body
    .container
      .span-24#header
        .span-8.append-4
          %h1= link_to image_tag("/images/grantvote.png"), root_path, :alt => "GrantVote"
        .span-10.append-2.prepend-top.nav.last
          %ul#nav-list.pull-1.prepend-top
            %li= link_to "Groups", groups_path, :class => "rounded"
            %li= link_to "Leaders", root_path, :class => "rounded"
            %li<
              - if current_user
                =link_to "You", account_path, :class => "rounded"
          -#= pluralize User.logged_in.count, "user" currently logged in
          .prepend-top.flr#login
            - if !current_user
              = link_to "Register", new_account_path, :class => "rounded" 
              |
              = link_to "Log In", new_user_session_path, :class => "rounded" 
            - else 
              = link_to "Logout", user_session_path, :method => :delete, :class => "rounded" 
          - if flash[:notice]
            .span-14.pull-3
              %p.rounded= flash[:notice]
      .span-24.last#content= yield
